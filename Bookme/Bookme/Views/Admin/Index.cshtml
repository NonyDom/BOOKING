@model Bookme.ViewModels.BookingFormViewModel

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div id="main">
    <div class="containercontainer-fluid mt-5 ml-0 p-5" style="color:#4a0000;">
        <h1>Welcome @User?.Identity?.Name  </h1>
        <div class="row">
            <div class="card col-sm-12 col-lg-3 p-3 mx-5 mt-2 shadow text-center" style="color:#4a0000;">
                <h4>Total Bookings</h4>
                <h6 style="border-radius:100%; background-color:rgb(98 4 4 / 20%); color:#4a0000;" class=" text-center col-2 mx-auto p-2"> @Model?.TotalBooking</h6>
            </div>
            <div class="card col-sm-12 col-lg-3 p-3 mx-5 mt-2 shadow text-center" style="color:#4a0000;">
                <h4>Approved Bookings</h4>
                <h6 style="border-radius:100%; background-color:rgb(98 4 4 / 20%); color:#4a0000;" class="text-center col-2 mx-auto p-2">@Model?.TotalApprovedBooking</h6>
            </div>
            <div class="card col-sm-12 col-lg-3 p-3 mx-5 mt-2 shadow text-center" style="color:#4a0000;">
                <h4>Declined Bookings</h4>
                <h6 style="border-radius:100%; background-color:rgb(98 4 4 / 20%); color:#4a0000;" class="text-center col-2 mx-auto p-2">@Model?.TotalDeclinedBooking</h6>
            </div>
            <div class="card col-sm-12 col-lg-3 p-3 mx-5 mt-5 shadow text-center" style="color:#4a0000;">
                <h4>Cancelled Bookings</h4>
                <h6 style="border-radius:100%; background-color:rgb(98 4 4 / 20%); color:#4a0000;" class="text-center col-2 mx-auto p-2">@Model?.TotalCancelledBooking</h6>
            </div>
            <div class="card col-sm-12 col-lg-3 p-3 mx-5 mt-5 shadow text-center" style="color:#4a0000;">
                <h4>Pending Bookings</h4>
                <h6 style="border-radius:100%; background-color:rgb(98 4 4 / 20%); color:#4a0000;" class="text-center col-2 mx-auto p-2">@Model?.TotalPendingBooking</h6>
            </div>
        </div>
        <div class=" mt-4 mb-4">
            <a  class="btn text-white mt-3" style="background-color:#4a0000;" onclick="available('@Model?.UserId')"><b>Change Availability</b></a>
        </div>
    </div>
</div>


