<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookme</title>
    <link rel="stylesheet" href="~/bootstrap-4.6.2-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bookme.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css"/>
    <link rel="stylesheet" href="~/css/sweetalert2.css"/>

    <script>

    function showLoader() {
        $("#myModal").modal({ backdrop: 'static', keyboard: false });
    }
    function hideLoader() {
        $("#myModal").modal('hide');
    }
    function showSpin() {
        $("#showspin").fadeOut(1500);
        $("#showcontent").fadeIn(3000);
    }

    function errorAlert(message) {
        Swal.fire({
            icon: 'error',
            text: message,
        })
    }

    function infoAlert(message) {
        Swal.fire({
            icon: 'info',
            text: message,
        })
    }

    function infoAlertWithStyles(message) {
        Swal.fire({
            title: 'Notification',
            icon: 'info',
            text: message,
        })
    }

    function successAlert(message) {
        Swal.fire({
            icon: 'success',
            text: message,
        })
    }

    function newSuccessAlert(message, url) {
        Swal.fire({
            icon: 'success',
            text: message,
        }).then(function () {

            location.href = url;
        })
    }

    function successAlertWithRedirect(message, url) {
        swal.fire({
            title: "Success",
            text: message,
            icon: "success",
            timer: "30000",
            overlay: "background - color: rgba(43, 165, 137, 0.45)",
        }).then(function () {

            location.href = url;
        })
    }

    function successAlertWithDoubleButtons(message, url) {
        swal.fire({
            title: "Success",
            text: message,
            icon: "success",
            showCancelButton: true,
            cancelButtonColor: "#22c8db",
            confirmButtonText: "Pay Reg Bonus",
            confirmButtonColor: "#006400",
        }).then((result) => {
            if (result.isConfirmed) {
                location.href = url;
            }
            else {
                location.reload();
            }
        })
    }

</script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-light border-bottom box-shadow" style="background-color: black">
            <div class="container-fluid">
                <a class="navbar-brand text-white" style="font-size:100%" asp-area="" asp-controller="SuperAdmin" asp-action="Index"><b>Bookme</b></a>
                <a class="navbar-brand text-white" id="slideToggle" style="font-size:150%"><i class="fa fa-bars"></i></a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                               <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle btn text-black"style="background-color: white"  href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @User?.Identity?.Name
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Profile">My profile</a>
                               <form method="post" asp-action="logout" asp-controller="Account">
                                    <button class="btn btn-dark btn-block">Logout</button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="sideBar" class="sidenav shadow" style="background-color: #E6E6FA">
        <ul>
            <li>
                <a class="nav-link text-dark" asp-action="Index" asp-controller="Admin"><i class="fa fa-gauge-high"></i>&nbsp;  Dashboard</a>
            </li>
            @if (User.IsInRole("SuperAdmin"))
            {
                <li>
                    <a class="nav-link text-dark" asp-action="Category" asp-controller="SuperAdmin"><i class="fa fa-layer-group"></i>&nbsp; Category</a>
                </li>
            }
            
            <li>
                <a class="nav-link text-dark" asp-action="Booking" asp-controller="Admin"> <i class="fa fa-book-open"></i>&nbsp;  Booking </a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-action="MyBookings" asp-controller="Admin"><i class="fa fa-book-open-reader"></i> &nbsp; My Bookings</a>
            </li>
            <li>
            <li>
                <a class="nav-link text-dark" asp-action="MyBookingHistory" asp-controller="Admin"><i class="fa fa-book-open-cover"></i>&nbsp;  My Booking History</a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-action="" asp-controller="Admin"><i class="fa-duotone fa-message-dots"></i>&nbsp;  Change Availability</a>
            </li>
                <a class="nav-link text-dark" asp-action="Profile" asp-controller="Admin"><i class="fa fa-user"></i>&nbsp;  Profile</a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-action="logout" asp-controller="Account"><i class="fa fa-right-from-bracket"></i>&nbsp;  Logout</a>
            </li>
            

        </ul>
    </div>


    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: black">
        <div class="container">
            &copy; 2024 - Bookme - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @* <script src="~/lib/jquery/dist/jquery-3.3.1.min.js"></script> *@
     
    <script src="~/js/sweetalert2.all.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="~/bootstrap-4.6.2-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/bootstrap-4.6.2-dist/js/bootstrap.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#slideToggle").click(function () {
                $("#sideBar").slideToggle("slow");
            });
        });
    </script>
</body>
</html>
