<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookme</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bookme.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sweetalert2.css" />
    
    <script>

        function showLoader() {
            $("#myModal").modal({ backdrop: 'static', keyboard: false });
        }
        function hideLoader() {
            $("#myModal").modal('hide');
        }
        function showSpin() {
            $("#showspin").fadeOut(1500);
            $("#showcontent").fadeIn(3000);
        }

        function errorAlert(message) {
            Swal.fire({
                icon: 'error',
                text: message,
            })
        }

        function infoAlert(message) {
            Swal.fire({
                icon: 'info',
                text: message,
            })
        }

        function infoAlertWithStyles(message) {
            Swal.fire({
                title: 'Notification',
                icon: 'info',
                text: message,
            })
        }

        function successAlert(message) {
            Swal.fire({
                icon: 'success',
                text: message,
            })
        }

        function newSuccessAlert(message, url) {
            Swal.fire({
                icon: 'success',
                text: message,
            }).then(function () {

                location.href = url;
            })
        }

        function successAlertWithRedirect(message, url) {
            swal.fire({
                title: "Success",
                text: message,
                icon: "success",
                timer: "30000",
                overlay: "background - color: rgba(43, 165, 137, 0.45)",
            }).then(function () {

                location.href = url;
            })
        }

        function successAlertWithDoubleButtons(message, url) {
            swal.fire({
                title: "Success",
                text: message,
                icon: "success",
                showCancelButton: true,
                cancelButtonColor: "#22c8db",
                confirmButtonText: "Pay Reg Bonus",
                confirmButtonColor: "#006400",
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = url;
                }
                else {
                    location.reload();
                }
            })
        }

    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-light border-bottom box-shadow" style="background-color: white">
            <div class="container-fluid">
                <a class="navbar-brand" style="font-size:200%; color:#4a0000; font-weight:700;" asp-area="" asp-controller="Home" asp-action="Index">Bookme</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" style="font-size:larger; color:#4a0000; font-weight:600;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="font-size:larger; color:#4a0000; font-weight:600;" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="font-size:larger; color: #4a0000; font-weight:600;" asp-area="" asp-controller="Account" asp-action="Registration">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="font-size:larger; color:#4a0000; font-weight:600;" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-white" style="background-color:#4a0000">
        <div class="container">
            &copy; 2024 - Bookme - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
     @* <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
 
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
